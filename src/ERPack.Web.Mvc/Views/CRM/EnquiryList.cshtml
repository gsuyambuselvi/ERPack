@using ERPack.Web.Startup
@{
    ViewBag.Title = L("EnquiryList");
    ViewBag.CurrentPageName = PageNames.Enquiries;

}
@section scripts
{
    <environment names="Development">
        <script src="~/view-resources/Views/CRM/Enquires.js" asp-append-version="true"></script>
    </environment>

    <environment names="Staging,Production">
        <script src="~/view-resources/Views/CRM/Enquires.min.js" asp-append-version="true"></script>
    </environment>

}
<section class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Enquiry List</li>
                    </ol>
                </nav>
            </div>
            <div class="col-sm-6">
                <a href="NewEnquiry" class="btn bg-blue float-sm-right">
                    <i class="fa fa-plus-square"></i>
                    @L("Create")
                </a>
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md-6">
                                <!--Use for bulk actions-->
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="EnquiryTable" class="table table-striped table-bordered nowrap">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th>@L("EnquiryId")</th>
                                        <th>Enquiry Datetime</th>
                                        <th>@L("Customer") @L("Name")</th>
                                        <th>@L("Comments")</th>
                                        <th>@L("Status")</th>
                                        <th>@L("Status") @L("DateTime")</th>
                                        <th>@L("HighPriority")</th>
                                        <th>@L("Actions")</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
