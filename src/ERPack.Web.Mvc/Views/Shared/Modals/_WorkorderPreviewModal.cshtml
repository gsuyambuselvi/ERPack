@using Abp.Authorization.Users
@using Abp.MultiTenancy
@using ERPack.MultiTenancy
@using ERPack.Web.Models.Common.Modals
@{
    Layout = null;
}
<div class="modal fade" id="WorkorderPreviewModal" tabindex="-1" role="dialog" aria-labelledby="WorkorderPreviewModal" data-backdrop="static">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            @await Html.PartialAsync("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("WorkorderPreview")))
            <div class="modal-body">
                <div class="row ps-4 mb-2">
                    <div class="col-md-6">
                        <img id="frame" src="" class="img-fluid" style="height:50px;width:50px;" />
                    </div>
                    <div class="col-md-6">
                        <div class="row">
                            <div style="font-weight:700;">Date : @DateTime.Now.ToString("dd/MM/yyyy")</div>
                        </div>
                        <div class="row">
                            <div id="divPrevWorkorderId" style="font-weight:700;"></div>
                        </div>
                    </div>
                </div>
                <div class="row ps-4  mb-2">
                    <div class="col-md-9">
                        <div class="row" style="font-weight:700;text-align:right;">
                            From Address :
                        </div>
                        <div class="row">

                        </div>
                        <div class="row">
                            
                        </div>
                        <div class="row">
                            
                        </div>
                        <div class="row">
                            
                        </div>
                        <div class="row">
                            
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="input-group">
                            <img id="previewImage" src="" class="img-fluid mx-auto" style="height:100px;width:100px;display:none;" />
                        </div>
                    </div>
                </div>
                <div class="row ps-4" id="divPrevSubject" style="font-weight:700;text-align:left;"></div>

                <div class="row ps-4">
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th scope="col">S.No</th>
                                <th scope="col">Material</th>
                                <th scope="col">Unit</th>
                                <th scope="col">Qty</th>
                                <th scope="col">Issue Date</th>
                                <th scope="col">Complete Date</th>
                                <th scope="col">Actual Complete Date</th>
                                <th scope="col">User</th>
                            </tr>
                        </thead>
                        <tbody id="tblPrevBody">
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
