@using ERPack.Web.Startup
@using ERPack.Web.Models.Customers
@using Abp.Authorization.Users
@model AddEditCustomerModel
@{
    ViewBag.Title = L("CreateCustomer");
    ViewBag.CurrentPageName = PageNames.CreateCustomer;
    var Count = 0;
}

