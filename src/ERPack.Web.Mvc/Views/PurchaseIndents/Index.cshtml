@using ERPack.Web.Startup
@{
    ViewBag.Title = L("PurchaseIndents");
    ViewBag.CurrentPageName = PageNames.PurchaseIndentList;
}
@section scripts
    {
    <environment names="Development">
        <script src="~/view-resources/Views/PurchaseIndents/Index.js" asp-append-version="true"></script>
    </environment>

    <environment names="Staging,Production">
        <script src="~/view-resources/Views/PurchaseIndents/Index.min.js" asp-append-version="true"></script>
    </environment>
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <h1>@L("PurchaseIndents")</h1>
            </div>
            <div class="col-sm-6">
                
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md-6">
                                <!--Use for bulk actions-->
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="PurchaseIndentsTable" class="table table-striped table-bordered nowrap">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th>@L("ItemCode")</th>
                                        <th>@L("Description")</th>
                                        <th>@L("Quantity")</th>
                                        <th>@L("RequiredBy")</th>
                                        <th>@L("Remarks")</th>
                                        <th>@L("RequestedBy")</th>
                                        <th style="width: 150px">@L("Actions")</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
